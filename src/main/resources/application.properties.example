spring.application.name=${SPRING_APP_NAME:InventoryNexus}
server.port=8081
#
# expose the /info endpoint and /health endpoint
#
management.endpoints.web.exposure.include=health, info
management.info.env.enabled=true

#
#exclude the default /beans endpoint
#
management.endpoints.web.exposure.exclude=beans

#
#app information
#
info.app.name=${APP_NAME:InventoryNexus}
info.app.version=${APP_VERSION:0.1.1}
info.app.description=${APP_DESCRIPTION:The backend to the shopify integration application that performs business logic, performs API calls to Shopify and stores the data in a database.}

spring.datasource.url=${DATABASE_URL:jdbc:postgresql://localhost:5432/postgres}
spring.datasource.username=${DATABASE_USERNAME:My_Massive_Backend}
spring.datasource.password=${DATABASE_PASSWORD:An_Equally_Massive_Password}

#
# set the default admin username and password
#
spring.security.user.name=${SECURITY_USERNAME:Finch}
spring.security.user.password=${SECURITY_PASSWORD:devFinch}
logging.level.org.springframework.security=${SPRING_SECURITY_LOG_LEVEL:TRACE}


#
# springdoc settings (hopefully they'll fix this in the future)
#
#springdoc.enable-data-rest=${DISABLE_SPRINGDOC_DATA_REST:false}
#springdoc.enable-hateoas=${DISABLE_SPRINGDOC_HATEOAS:false}


spring.flyway.baseline-on-migrate=true

# set logging to warn
#
logging.level.root=WARN

#
#Adjust how the logging it output.
#
logging.pattern.console = ${LOGPATTERN_CONSOLE:%green(%d{HH:mm:ss.SSS}) %blue(%-5level) %red([%thread]) %yellow(%logger{15}) - %msg%n}